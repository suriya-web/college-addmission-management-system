@model IEnumerable<collegeAdmission.Models.StudentViewModel>
<style>
    .btn {
        background: #f8f9fa; /* Light background */
        border-bottom: 2px solid #ddd; /* Matches the navbar style */
        padding: 10px 20px;
    }

        .btn ul {
            display: flex;
            gap: 20px;
            list-style-type: none; /* Removes bullet points */
            margin-left: 800px;
            padding: 0;
        }

            .btn ul li {
                margin: 0;
            }

                .btn ul li a {
                    text-decoration: none;
                    font-size: 14px;
                    color: #333;
                    padding: 5px 10px;
                    border-radius: 5px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .btn ul li a:hover {
                        background-color: #ddd;
                        color: #000;
                    }

</style>


@{
    ViewData["Title"] = "Applications";
}
<div class="btn">
    <ul>
        <input type="button" value="Logout" onclick="logout()" />
        <li><a conasptroller="Admin" asp-action="Enquiry">Enquriy </a></li>
        </li>
        <li><a conasptroller="Admin" asp-action="AddNotice">Notice</a></li>
        <li><a conasptroller="Admin" asp-action="AdminAction">Applications </a></li>
        <li>
            <a conasptroller="Admin" asp-action="RegUsers">Reg Users </a>
        </li>

        <li><a conasptroller="Admin" asp-action="AdminCourses">Course</a></li>

    </ul>
    </div>
@{
    Layout = null;
}
<h1>@ViewData["Title"]</h1>


<div class="student-table-container">
    <table class="student-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Program</th>
                <th>Course</th>
                <th>Address</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Phone</td>
                    <td>@student.Program</td>
                    <td>@student.Course</td>
                    <td>@student.Address</td>
                    <td>@student.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn accept-btn" onclick="acceptStudent(@student.Id)">Accept</button>

                        <button class="btn reject-btn" onclick="rejectStudent(@student.Id)">Reject</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    <style >
    .student-table-container {
        margin: 30px auto;
        max-width: 1200px;
        width: 100%;
    }

    .student-table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .student-table th,
        .student-table td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
            font-size: 1rem;
        }

        .student-table th {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        .student-table td {
            background-color: #f9f9f9;
        }

        
        .student-table tr:nth-child(even) td {
            background-color: #f2f2f2;
        }

       
        .student-table tr:hover {
            background-color: #f1f1f1;
        }

    
    .btn {
        padding: 8px 15px;
        border: none;
        color: white;
        font-size: 1rem;
        cursor: pointer;
        margin: 5px;
        border-radius: 5px;
    }

    .accept-btn {
        background-color: #28a745; 
    }

    .reject-btn {
        background-color: #dc3545; 
    }

    .btn:hover {
        opacity: 0.8;
    }
    
</style>
<script>
    function acceptStudent(studentId) {
        
        alert("Accepted Student ID: " + studentId);
      
    }

    function rejectStudent(studentId) {
        
        alert("Rejected Student ID: " + studentId);
       
    }
</script>