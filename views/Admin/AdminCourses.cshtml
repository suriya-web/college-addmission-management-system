@model List<Course>
@{
    Layout = null;
}

<head>
     <link rel="stylesheet" href="~/css/AdminCourse.css" />
     <style>
        .btn {
            justify-content: space-between;
            align-items: center;
            margin: 5px auto;
        }

        .btn {
            background: #f8f9fa; /* Light background */
            border-bottom: 2px solid #ddd; /* Matches the navbar style */
            padding: 10px 20px;
        }

            .btn ul {
                display: flex;
                gap: 20px;
                list-style-type: none; /* Removes bullet points */
                margin-left: 800px;
                padding: 0;
            }

                .btn ul li {
                    margin: 0;
                }

                    .btn ul li a {
                        text-decoration: none;
                        font-size: 14px;
                        color: #333;
                        padding: 5px 10px;
                        border-radius: 5px;
                        transition: background-color 0.3s, color 0.3s;
                    }

                        .btn ul li a:hover {
                            background-color: #ddd;
                            color: #000;
                        }






             .btn input[type="button"] {
                margin-top: 5px;
                padding: 10px;
                width: 15%;
                border: none;
                background-color: #e74c3c;
                color: white;
                font-size: 1rem;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s ease;
                float: right;
            }

                .btn input[type="button"]:hover {
                    background-color: #c0392b;
                } 
     </style>
</head>


    <div class="btn">
        <ul>
        @* <input type="button" value="Logout" onclick="logout()" /> *@
        <li><a conasptroller="Admin" asp-action="Enquiry">Enquriy </a></li>
        </li>
        <li><a conasptroller="Admin" asp-action="AddNotice">Notice</a></li>
        <li><a conasptroller="Admin" asp-action="AdminAction">Applications </a></li>
        <li>
            <a conasptroller="Admin" asp-action="RegUsers">Reg Users </a>
        </li>

        <li><a conasptroller="Admin" asp-action="AdminCourses">Course</a></li>
        
        </ul>
         
    
            <div class="admin-courses">
<h1>Admin Courses</h1>
<a asp-action="EditCourse">Add New Course</a>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.Description</td>
                <td>@course.IsActive</td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@course.CourseId">Edit</a>
                    <form asp-action="DeleteCourse" asp-route-id="@course.CourseId" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>

