@model collegeAdmission.Models.AdmissionForm
<head>
    <link rel="stylesheet" href="~/css/status.css">
</head>
<style>
    .btn {
        background: #f8f9fa; /* Light background */
        border-bottom: 2px solid #ddd; /* Matches the navbar style */
        padding: 10px 20px;
    }

        .btn ul {
            display: flex;
            gap: 20px;
            list-style-type: none; /* Removes bullet points */
            margin-left: 800px;
            padding: 0;
        }

            .btn ul li {
                margin: 0;
            }

                .btn ul li a {
                    text-decoration: none;
                    font-size: 14px;
                    color: #333;
                    padding: 5px 10px;
                    border-radius: 5px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .btn ul li a:hover {
                        background-color: #ddd;
                        color: #000;
                    }

</style>
<body>
    <div class="btn">
        <ul>
            <li><a conasptroller="Admin" asp-action="Status">Status</a></li>
            <li><a conasptroller="Admin" asp-action="SubmitFees">Submit Fees</a></li>
            <li>
                <a conasptroller="Admin" asp-action="AdmissionForms">Admission Form</a>
            </li>
            <li><a conasptroller="Admin" asp-action="profile">Profile</a></li>



        </ul>

    </div>
<h2>Status</h2>

<p><strong>First Name:</strong> @Model.FullName</p>

<p><strong>Contact Email:</strong> @Model.Email</p>
    <p><strong>Course :</strong> @Model.Course</p>
<p><strong>Status:</strong> @Model.Status</p>

</body>
