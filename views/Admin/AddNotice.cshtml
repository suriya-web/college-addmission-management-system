        }

            .btn ul li {
                margin: 0;
            }

                .btn ul li a {
                    text-decoration: none;
                    font-size: 14px;
                    color: #333;
                    padding: 5px 10px;
                    border-radius: 5px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .btn ul li a:hover {
                        background-color: #ddd;
                        color: #000;
                    }





            .btn input[type="button"] {
                margin-top: 5px;
                padding: 10px;
                width: 8%;
                border: none;
                background-color: #e74c3c;
                color: white;
                font-size: 1rem;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s ease;
                float: right;
            }

                .btn input[type="button"]:hover {
                    background-color: #c0392b;
                }
        </style>

