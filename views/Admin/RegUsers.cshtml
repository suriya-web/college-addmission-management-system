@model IEnumerable<User>


@{
    Layout = null;
}
<style>
    .btn {
        background: #f8f9fa; /* Light background */
        border-bottom: 2px solid #ddd; /* Matches the navbar style */
        padding: 10px 20px;
    }

        .btn ul {
            display: flex;
            gap: 20px;
            list-style-type: none; /* Removes bullet points */
            margin-left: 800px;
            padding: 0;
        }

            .btn ul li {
                margin: 0;
            }

                .btn ul li a {
                    text-decoration: none;
                    font-size: 14px;
                    color: #333;
                    padding: 5px 10px;
                    border-radius: 5px;
                    transition: background-color 0.3s, color 0.3s;
                }

                    .btn ul li a:hover {
                        background-color: #ddd;
                        color: #000;
                    }




        .btn input[type="button"] {
            margin-top: 5px;
            padding: 10px;
            width: 8%;
            border: none;
            background-color: #e74c3c;
            color: white;
            font-size: 1rem;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
            float: right;
        }

            .btn input[type="button"]:hover {
                background-color: #c0392b;
            }

</style>
<div class="btn">
    <ul>
      @*   <input type="button" value="Logout" onclick="logout()" /> *@
        <li><a conasptroller="Admin" asp-action="Enquiry">Enquriy </a></li>
        </li>
        <li><a conasptroller="Admin" asp-action="AddNotice">Notice</a></li>
        <li><a conasptroller="Admin" asp-action="AdminAction">Applications </a></li>
        <li>
            <a conasptroller="Admin" asp-action="RegUsers">Reg Users </a>
        </li>

        <li><a conasptroller="Admin" asp-action="AdminCourses">Course</a></li>
    </ul>
</div>

@{
    ViewData["Title"] = "Registered Users";
}
<h1>@ViewData["Title"]</h1>

<table class="user-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Contact</td>
                <td>@user.Gender</td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        color: #333;
    }

    .user-table {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .user-table th,
        .user-table td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
            font-size: 1rem;
        }

        .user-table th {
            background-color: #4CAF50;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        .user-table td {
            background-color: #f9f9f9;
        }

        .user-table tr:nth-child(even) td {
            background-color: #f2f2f2;
        }

        .user-table tr:hover {
            background-color: #f1f1f1;
        }

    .live-column {
        background-color: #e0f7fa; 
        color: #00796b; 
        font-weight: bold;
        font-style: italic;
    }

        .live-column:hover {
            background-color: #b2ebf2; 
            cursor: pointer;
        }

    
    .highlight-column {
        background-color: #f3e5f5; 
        color: #8e24aa; 
        font-weight: bold;
    }

        .highlight-column:hover {
            background-color: #e1bee7; 
            cursor: pointer;
        }

   

    
    .user-table-container {
        margin: 40px 20px;
    }
</style>

<script>
    function logout() {
    window.location.href = '@Url.Action("Login", "User")';
    }

</script>