<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboard1.css">
    <style>

        .student-table-container {
            margin: 20px auto;
            max-width: 1000px;
            width: 100%;
            margin-left:35px;
        }

        .student-table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .student-table th,
            .student-table td {
                padding: 5px;
                text-align: left;
                border: 1px solid #ddd;
                font-size: 1rem;
            }

            .student-table th {
                background-color: #4CAF50;
                color: white;
                font-weight: bold;
                text-transform: uppercase;
            }

            .student-table td {
                background-color: #f9f9f9;
            }

            /* Zebra striping for table rows */
            .student-table tr:nth-child(even) td {
                background-color: #f2f2f2;
            }

            /* Hover effect */
            .student-table tr:hover {
                background-color: #f1f1f1;
            }

        /* Action Button Styles */
        .btn {
            padding: 8px 15px;
            border: none;
            color: white;
            font-size: 1rem;
            cursor: pointer;
            margin: 5px;
            border-radius: 5px;
        }

        .accept-btn {
            background-color: #28a745; /* Green for accept */
        }

        .reject-btn {
            background-color: #dc3545; /* Red for reject */
        }

        .btn:hover {
            opacity: 0.8;
        }

        /* Status Styles */
        .status {
            font-weight: bold;
            padding: 5px 10px;
            border-radius: 5px;
            color: white;
            text-transform: capitalize;
        }

            .status.pending {
                background-color: #ffc107; 
            }

            .status.accepted {
                background-color: #28a745; 
            }

            .status.rejected {
                background-color: #dc3545; 
            }



        /* Minimalist Style for .btn */
        .btn {
            background: #f8f9fa; /* Light background */
            border-bottom: 2px solid #ddd; /* Matches the navbar style */
            padding: 10px 20px;
        }

            .btn ul {
                display: flex;
                gap: 20px;
                list-style-type: none; /* Removes bullet points */
                margin-left: 800px;
                padding: 0;
            }

                .btn ul li {
                    margin: 0;
                }

                    .btn ul li a {
                        text-decoration: none;
                        font-size: 14px;
                        color: #333;
                        padding: 5px 10px;
                        border-radius: 5px;
                        transition: background-color 0.3s, color 0.3s;
                    }

                        .btn ul li a:hover {
                            background-color: #ddd;
                            color: #000;
                        }



    </style>
</head>
<body>
    <div>
        <img src="~/images/college.png" alt="Logo" class="Logo" height="40px" width="60px" style="position:absolute; top:19px; left:27px;" />
    </div>
    <div class="btn">
            <ul>
            <li><a conasptroller="Admin" asp-action="Status">Status</a></li>
            <li><a conasptroller="Admin" asp-action="SubmitFees">Submit Fees</a></li>
            <li>
                <a conasptroller="Admin" asp-action="AdmissionForms">Admission Form</a>
            </li>
            <li><a conasptroller="Admin" asp-action="profile">Profile</a></li>
           
            
          
            </ul>
        
            </div>

    <div class="dashboard-container">
        
        <div class="sidebar">
            <h2>Dashboard</h2>
            <ul>
                <li><a conasptroller="Admin" asp-action="profile">Profile</a></li>
                <li>
                    <a conasptroller="Admin" asp-action="AdmissionForms">Admission Form</a>
                </li>
                <li><a conasptroller="Admin" asp-action="SubmitFees">Submit Fees</a></li>
                <li><a conasptroller="Admin" asp-action="Status">Status</a></li>
                <input type="button" value="Logout" onclick="logout()" />
            </ul>
        </div>
		
       
        <div class="main-content">
            <header>
                <h1>Welcome @ViewBag.Username</h1>
            </header>
           
            

        </div>
        <script>
    function logout() {
    window.location.href = '@Url.Action("Login", "User")';
    }
         
    </script>
    
</body>
</html>
