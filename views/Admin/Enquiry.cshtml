@model List<collegeAdmission.Models.Enquiry>
@{
    ViewData["Title"] = "Enquiry ";
}
@{
    Layout = null;
}
        <div class="inquiries-container">
<h1>Admin Inquiries</h1>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Message</th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var Enquiry in Model)
        {
            <tr>
                <td>@Enquiry.Id</td>
                <td>@Enquiry.FirstName</td>
                <td>@Enquiry.LastName</td>
                <td>@Enquiry.Gmail</td>
                <td>@Enquiry.Contact</td>
                <td>@Enquiry.Message</td>
            </tr>
        }
    </tbody>
</table>
</div>